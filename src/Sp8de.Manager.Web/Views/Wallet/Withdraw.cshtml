@{
ViewData["Title"] = "Wallet Withdraw";
ViewBag.PageClass = "transactions";
}
@section Scripts{
    <script>
        $('.wallet-trigger').addClass('active opening')
        $('.wallet-trigger').next('.sidebar-opened').addClass('active')
    </script>
}
	<div class="main-content">
		<h1>@ViewData["Title"]</h1>

		<div class="info row withdraw">
			<div class="instructions col-12">
				<form class="withdrawForm"
					  asp-page="/Wallet/CreateWithdrawalRequest"
					  onsubmit="return CreateWithdrawalRequest();">
					<div class=" row">
						<div class="input-div col-12 col-md-4">
							<div>Amount</div>
							<input type="number"
								   required
								   name="Amount"
								   class="amount form-control input-address"
								   placeholder="Amount">
							<input type="hidden"
								   name="Currency"
								   value="SPX">
						</div>
						<div class="input-div col-12 col-md-4">
							<div>Wallet</div>
							<input type="text"
								   required
								   pattern="^(0x)?[0-9a-fA-F]{40}$"
								   name="Wallet"
								   class="wallet form-control input-address"
								   placeholder="Wallet"
								   value="0xsdfefdwe4r534ec342r2wdsa">
						</div>
						<div class="input-div col-12 col-md-4">
							<div>Google 2FA</div>
							<input type="number"
								   required
								   class="tfa form-control input-address"
								   name="TwoFactorCode"
								   placeholder="Google 2FA"
								   value="">
						</div>
					</div>
					<div class="button-div row">
						<div class="col-6">
							<button type="submit" class="btn btn-info copy-btn CreateWithdrawalRequest">
								Withdraw your SPX tokens
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
